@page
@model LoyalKullaniciTakip.Pages.EkMesai.IndexModel
@{
    ViewData["Title"] = "Ek Mesai Kayıtları";
}

<h1>Ek Mesai Kayıtları</h1>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Hızlı Erişim Butonları -->
<div class="mb-4">
    <a asp-page="/EkMesai/BireyselEkleme" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Bireysel Ek Mesai Ekle
    </a>
    <a asp-page="/EkMesai/TopluEkleme" class="btn btn-success">
        <i class="bi bi-people-fill"></i> Toplu Ek Mesai Ekle
    </a>
    <a asp-page="/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Ana Sayfaya Dön
    </a>
</div>

<!-- Filtre Formu -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Filtreleme</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row g-3">
                <div class="col-md-2">
                    <label asp-for="SecilenAy" class="form-label">Ay</label>
                    <select asp-for="SecilenAy" class="form-select" asp-items="Model.AyListesi"></select>
                </div>
                <div class="col-md-2">
                    <label asp-for="SecilenYil" class="form-label">Yıl</label>
                    <select asp-for="SecilenYil" class="form-select" asp-items="Model.YilListesi"></select>
                </div>
                <div class="col-md-2">
                    <label asp-for="SecilenDepartmanID" class="form-label">Departman</label>
                    <select asp-for="SecilenDepartmanID" class="form-select" asp-items="Model.DepartmanListesi"></select>
                </div>
                <div class="col-md-2">
                    <label asp-for="SecilenMeslekID" class="form-label">Meslek</label>
                    <select asp-for="SecilenMeslekID" class="form-select" asp-items="Model.MeslekListesi"></select>
                </div>
                <div class="col-md-2">
                    <label asp-for="SecilenPersonelID" class="form-label">Personel</label>
                    <select asp-for="SecilenPersonelID" class="form-select" asp-items="Model.PersonelListesi"></select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Listele
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.RaporGosterilsin)
{
    @if (Model.EkMesaiListesi.Any())
    {
        <!-- Özet İstatistikler -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h6 class="card-subtitle mb-2 text-white-50">Toplam Kayıt Sayısı</h6>
                        <h2 class="mb-0">@Model.ToplamKayitSayisi</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h6 class="card-subtitle mb-2">Toplam Ek Mesai Saati</h6>
                        <h2 class="mb-0">@Model.ToplamEkMesaiSaati.ToString("F1")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h6 class="card-subtitle mb-2 text-white-50">Toplam Ek Mesai Tutarı</h6>
                        <h2 class="mb-0">@Model.ToplamEkMesaiTutari.ToString("N2") ₺</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ek Mesai Listesi -->
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Ek Mesai Detayları</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Personel</th>
                                <th>Departman</th>
                                <th>Meslek</th>
                                <th>Tarih</th>
                                <th>Gün</th>
                                <th>Gün Tipi</th>
                                <th class="text-end">Saat</th>
                                <th class="text-end">Katsayı</th>
                                <th class="text-end">Saatlik Ücret</th>
                                <th class="text-end">Tutar</th>
                                <th>Açıklama</th>
                                <th class="text-center">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kayit in Model.EkMesaiListesi)
                            {
                                <tr>
                                    <td><strong>@kayit.PersonelAdSoyad</strong></td>
                                    <td>@kayit.Departman</td>
                                    <td>@kayit.Meslek</td>
                                    <td>@kayit.Tarih.ToString("dd.MM.yyyy")</td>
                                    <td>@kayit.Gun</td>
                                    <td>
                                        @if (kayit.GunTipi == "Pazar")
                                        {
                                            <span class="badge bg-danger">Pazar/Tatil</span>
                                        }
                                        else if (kayit.GunTipi == "Cumartesi")
                                        {
                                            <span class="badge bg-warning text-dark">Cumartesi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Hafta İçi</span>
                                        }
                                    </td>
                                    <td class="text-end">@kayit.EkMesaiSaati.ToString("F1")</td>
                                    <td class="text-end">@kayit.Katsayi.ToString("F2")x</td>
                                    <td class="text-end">@kayit.SaatlikUcret.ToString("N2") ₺</td>
                                    <td class="text-end"><strong class="text-success">@kayit.HesaplananTutar.ToString("N2") ₺</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kayit.Aciklama))
                                        {
                                            <span title="@kayit.Aciklama">@(kayit.Aciklama.Length > 30 ? kayit.Aciklama.Substring(0, 30) + "..." : kayit.Aciklama)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <form method="post" asp-page-handler="Delete" asp-route-ekMesaiId="@kayit.EkMesaiID"
                                              onsubmit="return confirm('Bu ek mesai kaydını silmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Kayıt bulunamadı.</strong> Seçilen kriterlere göre ek mesai kaydı bulunmamaktadır.
        </div>
    }
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        Ek mesai kayıtlarını görmek için yukarıdaki filtrelerden ay/yıl seçip <strong>"Listele"</strong> butonuna tıklayın.
    </div>
}
