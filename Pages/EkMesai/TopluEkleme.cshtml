@page
@model LoyalKullaniciTakip.Pages.EkMesai.TopluEklemeModel
@{
    ViewData["Title"] = "Toplu Ek Mesai Ekle";
}

<h1>Toplu Ek Mesai Ekle</h1>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Html.Raw(TempData["ErrorMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="alert alert-info">
    <i class="bi bi-info-circle"></i>
    <strong>Bilgi:</strong> Bu sayfadan birden fazla personel için aynı anda ek mesai kaydı oluşturabilirsiniz.
    Departman ve meslek filtreleriyle personel listesini daraltabilir, çoklu tarih seçimi yapabilirsiniz.
</div>

<div class="card">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">Toplu Ek Mesai Bilgileri</h5>
    </div>
    <div class="card-body">
        <!-- Filtreleme Formu (GET) -->
        <form method="get" id="filterForm">
            <div class="row g-3 mb-4 pb-3 border-bottom">
                <div class="col-md-6">
                    <label asp-for="SecilenDepartmanID" class="form-label">Departman Filtresi</label>
                    <select asp-for="SecilenDepartmanID" class="form-select" asp-items="Model.DepartmanListesi"
                            onchange="this.form.submit()"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="SecilenMeslekID" class="form-label">Meslek Filtresi</label>
                    <select asp-for="SecilenMeslekID" class="form-select" asp-items="Model.MeslekListesi"
                            onchange="this.form.submit()"></select>
                </div>
            </div>
        </form>

        <!-- Ana Form (POST) -->
        <form method="post" id="mainForm">

            <!-- Personel Seçimi -->
            <div class="mb-4">
                <label class="form-label">Personel Seçimi <span class="text-danger">*</span></label>
                <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                    @if (Model.PersonelListesi.Any())
                    {
                        <div class="mb-2">
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAllPersonel(true)">
                                <i class="bi bi-check-all"></i> Tümünü Seç
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="selectAllPersonel(false)">
                                <i class="bi bi-x"></i> Seçimi Temizle
                            </button>
                            <span class="ms-3 text-muted">Toplam: @Model.PersonelListesi.Count personel</span>
                        </div>

                        <div class="row g-2">
                            @foreach (var personel in Model.PersonelListesi)
                            {
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input personel-checkbox"
                                               type="checkbox"
                                               name="SecilenPersonelIDler"
                                               value="@personel.PersonelID"
                                               id="personel_@personel.PersonelID"
                                               checked="@personel.IsSelected" />
                                        <label class="form-check-label" for="personel_@personel.PersonelID">
                                            <strong>@personel.AdSoyad</strong>
                                            <br />
                                            <small class="text-muted">@personel.Departman | @personel.Meslek</small>
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            Seçilen kriterlere göre personel bulunamadı. Lütfen filtreleri değiştirin.
                        </div>
                    }
                </div>
            </div>

            <!-- Tarih Seçimi -->
            <div class="row g-3 mb-4">
                <div class="col-md-12">
                    <label class="form-label">Tarih Seçimi <span class="text-danger">*</span></label>
                    <div class="input-group mb-2">
                        <input type="date" id="tarihEkleInput" class="form-control" />
                        <button type="button" class="btn btn-primary" onclick="tarihEkle()">
                            <i class="bi bi-plus-circle"></i> Tarih Ekle
                        </button>
                    </div>
                    <div id="secilenTarihlerContainer" class="border rounded p-2 bg-light" style="min-height: 60px;">
                        <div id="tarihChipsArea">
                            <small class="text-muted">Yukarıdan tarih seçip "Tarih Ekle" butonuna tıklayın</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ek Mesai Saati ve Açıklama -->
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="EkMesaiSaati" class="form-label">Ek Mesai Saati <span class="text-danger">*</span></label>
                    <input asp-for="EkMesaiSaati" type="number" class="form-control"
                           step="0.5" min="0" max="24" placeholder="Örnek: 2.5" required />
                    <small class="form-text text-muted">
                        0 ile 24 saat arasında bir değer girin
                    </small>
                </div>
                <div class="col-md-6">
                    <label asp-for="Aciklama" class="form-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="3"
                              placeholder="Örnek: Proje son teslim tarihi nedeniyle yapılan ek mesai"></textarea>
                </div>
            </div>

            <!-- Katsayı Bilgileri ve Manuel Giriş -->
            <div class="mb-4">
                <div class="card border-info">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-calculator"></i> Ek Mesai Katsayısı
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Sistem Ayarları (Genel Ayarlar'dan):</strong>
                                <div class="d-flex gap-3 mt-2">
                                    <span class="badge bg-primary fs-6">Hafta İçi: @Model.HaftaIciKatsayi.ToString("F2")x</span>
                                    <span class="badge bg-warning text-dark fs-6">Cumartesi: @Model.CumartesiKatsayi.ToString("F2")x</span>
                                    <span class="badge bg-danger fs-6">Pazar: @Model.PazarKatsayi.ToString("F2")x</span>
                                </div>
                                <small class="text-muted d-block mt-2">
                                    Sistem, seçilen tarihlerin gün tipine göre yukarıdaki katsayıları otomatik kullanacaktır.
                                </small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="ManuelKatsayi" class="form-label">
                                    Manuel Katsayı (İsteğe Bağlı)
                                </label>
                                <input asp-for="ManuelKatsayi" type="number" class="form-control"
                                       step="0.1" min="0" placeholder="Örnek: 3.0" />
                                <small class="form-text text-muted">
                                    Özel durumlar için manuel katsayı girebilirsiniz (örn: 3x mesai).
                                    Boş bırakırsanız sistem otomatik katsayıları kullanır.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bilgilendirme -->
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Dikkat:</strong>
                <ul class="mb-0 mt-2">
                    <li>Manuel katsayı girilmediğinde, tarihlerin gün tipine göre otomatik katsayı uygulanacaktır</li>
                    <li>Saatlik ücret, personelin aylık maaşından otomatik hesaplanacaktır (Maaş / 225)</li>
                    <li>Aynı personel ve tarih için daha önce kayıt varsa atlanacaktır</li>
                </ul>
            </div>

            <!-- Butonlar -->
            <div class="d-flex justify-content-between">
                <a asp-page="/EkMesai/Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-save"></i> Toplu Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Personel seçim fonksiyonları
    function selectAllPersonel(select) {
        const checkboxes = document.querySelectorAll('.personel-checkbox');
        checkboxes.forEach(cb => cb.checked = select);
    }

    // Tarih yönetimi
    let secilenTarihler = [];

    function tarihEkle() {
        const tarihInput = document.getElementById('tarihEkleInput');
        const tarih = tarihInput.value;

        if (!tarih) {
            alert('Lütfen bir tarih seçin.');
            return;
        }

        // Aynı tarih zaten eklenmişse uyar
        if (secilenTarihler.includes(tarih)) {
            alert('Bu tarih zaten eklenmiş.');
            return;
        }

        // Tarihi listeye ekle
        secilenTarihler.push(tarih);
        tarihInput.value = ''; // Input'u temizle

        // UI'ı güncelle
        guncelleSecilenTarihlerUI();
    }

    function tarihSil(tarih) {
        secilenTarihler = secilenTarihler.filter(t => t !== tarih);
        guncelleSecilenTarihlerUI();
    }

    function guncelleSecilenTarihlerUI() {
        const chipsArea = document.getElementById('tarihChipsArea');

        if (secilenTarihler.length === 0) {
            chipsArea.innerHTML = '<small class="text-muted">Yukarıdan tarih seçip "Tarih Ekle" butonuna tıklayın</small>';
        } else {
            let html = '<div class="d-flex flex-wrap gap-2">';
            secilenTarihler.forEach(tarih => {
                // Tarihi formatla (YYYY-MM-DD -> DD.MM.YYYY)
                const [yil, ay, gun] = tarih.split('-');
                const formatlıTarih = `${gun}.${ay}.${yil}`;

                html += `
                    <div class="badge bg-primary fs-6 d-flex align-items-center gap-2">
                        <span>${formatlıTarih}</span>
                        <button type="button" class="btn-close btn-close-white btn-sm"
                                onclick="tarihSil('${tarih}')" style="font-size: 0.6rem;"></button>
                        <input type="hidden" name="SecilenTarihler" value="${tarih}" />
                    </div>
                `;
            });
            html += '</div>';
            chipsArea.innerHTML = html;
        }
    }

    // Enter tuşuyla tarih ekleme
    document.addEventListener('DOMContentLoaded', function() {
        const tarihInput = document.getElementById('tarihEkleInput');
        tarihInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                tarihEkle();
            }
        });
    });
</script>
