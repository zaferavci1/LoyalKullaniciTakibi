@page
@model LoyalKullaniciTakip.Pages.Ayarlar.GenelAyarlarModel
@{
    ViewData["Title"] = "Sistem Ayarları";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="bi bi-gear-fill"></i> @ViewData["Title"]
            </h1>
            <p class="text-muted">Sistem genelinde kullanılan ayarları ve izin kurallarını yönetin</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Başarılı!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Hata!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <!-- Genel Ayarlar Kartı -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-sliders"></i> Genel Ayarlar
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.GenelAyarlar == null || !Model.GenelAyarlar.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Henüz hiç genel ayar tanımlanmamış.
                        </div>
                    }
                    else
                    {
                        <form method="post">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 25%;">Ayar Anahtarı</th>
                                            <th style="width: 40%;">Açıklama</th>
                                            <th style="width: 35%;">Değer</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var ayar in Model.GenelAyarlar)
                                        {
                                            <tr>
                                                <td class="align-middle">
                                                    <strong>@ayar.AyarKey</strong>
                                                </td>
                                                <td class="align-middle">
                                                    <small class="text-muted">@ayar.Aciklama</small>
                                                </td>
                                                <td>
                                                    <input type="text" 
                                                           class="form-control" 
                                                           name="AyarGuncelleme[@ayar.AyarKey]" 
                                                           value="@ayar.AyarValue" 
                                                           placeholder="Değer giriniz" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-page="/Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Ana Sayfaya Dön
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save"></i> Değişiklikleri Kaydet
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-body bg-light">
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="bi bi-info-circle"></i> Bilgi
                    </h6>
                    <p class="card-text small mb-0">
                        Genel ayarlardaki değişiklikler tüm sistem genelinde geçerli olacaktır. 
                        Lütfen dikkatli olun.
                    </p>
                </div>
            </div>

            <!-- Yıllık İzin Kuralları Kartı -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-range"></i> Yıllık İzin Kuralları
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Minimum Kıdem Yılı</th>
                                    <th>Maximum Kıdem Yılı</th>
                                    <th>Hak Edilen Gün Sayısı</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kural in Model.IzinKurallari)
                                {
                                    <tr>
                                        @if (Model.EditingIzinKuralId == kural.KidemIzinID)
                                        {
                                            <!-- Edit Mode -->
                                            <form method="post" asp-page-handler="UpdateIzinKural" class="d-contents">
                                                <input type="hidden" name="KidemIzinID" value="@kural.KidemIzinID" />
                                                <td>
                                                    <input type="number" name="MinKidemYili" value="@kural.MinKidemYili" class="form-control form-control-sm" required min="1" max="99" />
                                                </td>
                                                <td>
                                                    <input type="number" name="MaxKidemYili" value="@kural.MaxKidemYili" class="form-control form-control-sm" required min="1" max="99" />
                                                </td>
                                                <td>
                                                    <input type="number" name="HakedilenGunSayisi" value="@kural.HakedilenGunSayisi" class="form-control form-control-sm" required min="1" max="365" />
                                                </td>
                                                <td class="text-center">
                                                    <button type="submit" class="btn btn-sm btn-success me-1">
                                                        <i class="bi bi-check-lg"></i> Kaydet
                                                    </button>
                                                    <a href="?handler=CancelEditIzinKural" class="btn btn-sm btn-secondary">
                                                        <i class="bi bi-x-lg"></i> İptal
                                                    </a>
                                                </td>
                                            </form>
                                        }
                                        else
                                        {
                                            <!-- Display Mode -->
                                            <td><strong>@kural.MinKidemYili</strong> yıl</td>
                                            <td><strong>@kural.MaxKidemYili</strong> yıl</td>
                                            <td>
                                                <span class="badge bg-primary fs-6">@kural.HakedilenGunSayisi gün</span>
                                            </td>
                                            <td class="text-center">
                                                <a href="?handler=EditIzinKural&id=@kural.KidemIzinID" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil"></i> Düzenle
                                                </a>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body bg-light">
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="bi bi-info-circle"></i> Türk İş Kanunu Hakkında
                    </h6>
                    <p class="mb-2"><strong>4857 sayılı İş Kanunu</strong>'na göre:</p>
                    <ul class="mb-0 small">
                        <li>1-5 yıl arası çalışanlara yılda <strong>14 gün</strong> ücretli izin</li>
                        <li>5-15 yıl arası çalışanlara yılda <strong>20 gün</strong> ücretli izin</li>
                        <li>15 yıl ve üzeri çalışanlara yılda <strong>26 gün</strong> ücretli izin hakkı tanınmıştır.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .d-contents {
        display: contents;
    }
</style>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}

