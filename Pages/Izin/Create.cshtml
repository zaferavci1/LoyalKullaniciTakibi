@page "{personelId:int?}"
@model LoyalKullaniciTakip.Pages.Izin.CreateModel
@{
    ViewData["Title"] = "Yeni İzin Talebi";
}

<h1>Yeni İzin Talebi Oluştur</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="SelectedPersonelID" class="form-label">Personel</label>
                <select asp-for="SelectedPersonelID" class="form-select" asp-items="ViewBag.PersonelList">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="SelectedPersonelID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IzinTipiID" class="form-label">İzin Tipi</label>
                <select asp-for="IzinTipiID" class="form-select" asp-items="ViewBag.IzinTipiList">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="IzinTipiID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BaslangicTarihi" class="form-label">Başlangıç Tarihi</label>
                <input asp-for="BaslangicTarihi" class="form-control" type="date" />
                <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BitisTarihi" class="form-label">Bitiş Tarihi</label>
                <input asp-for="BitisTarihi" class="form-control" type="date" />
                <span asp-validation-for="BitisTarihi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Aciklama" class="form-label">Açıklama</label>
                <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Talep Oluştur</button>
                <a asp-page="./List" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

