@page
@model LoyalKullaniciTakip.Pages.Raporlar.DepartmanBazliPuantajModel
@{
    ViewData["Title"] = "Departman Bazlı Puantaj Raporu";
    var turkishCulture = new System.Globalization.CultureInfo("tr-TR");
}

<div class="container-fluid">
    <h1 class="mb-4">
        <i class="bi bi-building"></i> Departman Bazlı Puantaj Raporu
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtre Kartı -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-funnel"></i> Rapor Filtreleri
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label asp-for="SecilenDepartmanID" class="form-label">Departman</label>
                        <select asp-for="SecilenDepartmanID" asp-items="Model.DepartmanListesi" class="form-select">
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="SecilenAy" class="form-label">Ay</label>
                        <select asp-for="SecilenAy" asp-items="Model.AyListesi" class="form-select">
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="SecilenYil" class="form-label">Yıl</label>
                        <select asp-for="SecilenYil" asp-items="Model.YilListesi" class="form-select">
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Rapor Getir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.RaporGosterilsin)
    {
        @if (Model.Ozet != null && Model.PersonelDetaylari.Any())
        {
            <!-- Özet İstatistikler Kartı -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up"></i> Özet İstatistikler -
                        @turkishCulture.DateTimeFormat.GetMonthName(Model.SecilenAy) @Model.SecilenYil
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-light">
                                <h3 class="text-primary mb-0">@Model.Ozet.BenzersizPersonelSayisi</h3>
                                <small class="text-muted">Toplam Personel</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-light">
                                <h3 class="text-success mb-0">@Model.Ozet.ToplamGunSayisi</h3>
                                <small class="text-muted">Toplam Gün Kaydı</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-light">
                                <h3 class="text-warning mb-0">@Model.Ozet.ToplamMesaiSaati.ToString("N1")</h3>
                                <small class="text-muted">Toplam Mesai Saati</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3 bg-light">
                                <h3 class="text-info mb-0">@Model.Ozet.OrtalamaMesaiSaati.ToString("N1")</h3>
                                <small class="text-muted">Personel Başı Ort. Mesai</small>
                            </div>
                        </div>
                    </div>

                    @if (Model.Ozet.DurumIstatistikleri.Any())
                    {
                        <hr class="my-4" />
                        <h6 class="mb-3"><i class="bi bi-pie-chart"></i> Durum Dağılımı</h6>
                        <div class="row">
                            @foreach (var durum in Model.Ozet.DurumIstatistikleri)
                            {
                                <div class="col-md-3 mb-2">
                                    <span class="badge bg-secondary">@durum.DurumAdi</span>
                                    <strong class="ms-2">@durum.GunSayisi gün</strong>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Personel Detayları Tablosu -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-people"></i> Personel Detayları
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Personel Ad Soyad</th>
                                    <th>Departman</th>
                                    <th class="text-center">Çalışılan Gün</th>
                                    <th class="text-center">Toplam Mesai (Saat)</th>
                                    <th class="text-center">Ortalama Mesai (Saat)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var personel in Model.PersonelDetaylari)
                                {
                                    <tr>
                                        <td>
                                            <i class="bi bi-person-badge"></i>
                                            @personel.PersonelAdSoyad
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@personel.DepartmanAdi</span>
                                        </td>
                                        <td class="text-center">@personel.CalisilanGunSayisi</td>
                                        <td class="text-center">@personel.ToplamMesaiSaati.ToString("N1")</td>
                                        <td class="text-center">@personel.OrtalamaMesaiSaati.ToString("N1")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light fw-bold">
                                <tr>
                                    <td colspan="2">TOPLAM:</td>
                                    <td class="text-center">@Model.PersonelDetaylari.Sum(p => p.CalisilanGunSayisi)</td>
                                    <td class="text-center">@Model.PersonelDetaylari.Sum(p => p.ToplamMesaiSaati).ToString("N1")</td>
                                    <td class="text-center">
                                        @((Model.PersonelDetaylari.Any() ? Model.PersonelDetaylari.Average(p => p.OrtalamaMesaiSaati) : 0).ToString("N1"))
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Yazdırma Butonu -->
            <div class="mt-3 text-center d-print-none">
                <button onclick="window.print()" class="btn btn-outline-secondary">
                    <i class="bi bi-printer"></i> Yazdır
                </button>
                <a href="/Raporlar/HakedisHesaplama" class="btn btn-outline-primary">
                    <i class="bi bi-calculator"></i> Hakediş Hesaplama
                </a>
                <a href="/Puantaj/Index" class="btn btn-outline-success">
                    <i class="bi bi-calendar-check"></i> Puantaj Girişi
                </a>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                <i class="bi bi-exclamation-triangle" style="font-size: 48px;"></i>
                <p class="mt-3">Seçilen kriterlere göre puantaj kaydı bulunamadı.</p>
                <small>Lütfen farklı bir departman, ay veya yıl seçerek tekrar deneyin.</small>
            </div>
        }
    }
    else
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-filter-circle" style="font-size: 64px;"></i>
            <p class="mt-3">Rapor görmek için yukarıdan departman, ay ve yıl seçip <strong>"Rapor Getir"</strong> butonuna basın.</p>
        </div>
    }
</div>

<style>
    @@media print {
        .btn, .card-header h5, nav, footer, form, .d-print-none {
            display: none !important;
        }

        .card {
            border: 1px solid #dee2e6 !important;
            box-shadow: none !important;
            page-break-inside: avoid;
        }

        body {
            font-size: 11pt;
        }

        table {
            font-size: 10pt;
        }

        h1 {
            font-size: 18pt;
            margin-bottom: 10pt;
        }
    }
</style>
