@page
@model IndexModel
@{
    ViewData["Title"] = "Ana Sayfa";
    var bugun = DateTime.Today;
}

<div class="mb-4">
    <h1 class="display-5">Dashboard</h1>
    <p class="text-muted">Hoş geldiniz! İşte bugünün özeti...</p>
</div>

<!-- İstatistik Kartları -->
<div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
        <a asp-page="/Personel/Index" class="text-decoration-none">
            <div class="card bg-primary text-white shadow-sm h-100 hover-lift">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Toplam Personel</h6>
                            <h2 class="mb-0">@Model.ToplamPersonelSayisi</h2>
                        </div>
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-people-fill opacity-50" viewBox="0 0 16 16">
                                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3 col-sm-6">
        <a asp-page="/Izin/List" class="text-decoration-none">
            <div class="card bg-info text-white shadow-sm h-100 hover-lift">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Bugün İzinli</h6>
                            <h2 class="mb-0">@Model.BugunIzinliOlanlar.Count</h2>
                        </div>
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-calendar-x opacity-50" viewBox="0 0 16 16">
                                <path d="M6.146 7.146a.5.5 0 0 1 .708 0L8 8.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 9l1.147 1.146a.5.5 0 0 1-.708.708L8 9.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 9 6.146 7.854a.5.5 0 0 1 0-.708"/>
