@page "{personelId:int}"
@model LoyalKullaniciTakip.Pages.Muhasebe.CreateModel
@{
    ViewData["Title"] = "Yeni Muhasebe Hareketi Ekle";
}

<h1>Yeni Muhasebe Hareketi Ekle</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="HareketTipiID" class="form-label">Hareket Tipi</label>
                <select asp-for="HareketTipiID" class="form-select" asp-items="ViewBag.HareketTipleriList">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="HareketTipiID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tutar" class="form-label">Tutar (₺)</label>
                <input asp-for="Tutar" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Tutar" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tarih" class="form-label">Tarih</label>
                <input asp-for="Tarih" class="form-control" type="date" />
                <span asp-validation-for="Tarih" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Aciklama" class="form-label">Açıklama</label>
                <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-page="/Personel/Details" asp-route-id="@Model.PersonelID" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

