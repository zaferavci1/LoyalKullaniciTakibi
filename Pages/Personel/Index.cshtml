@page
@model LoyalKullaniciTakip.Pages.Personel.IndexModel
@{
    ViewData["Title"] = "Personel Listesi";
}

<h1>Personel Listesi</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Yeni Personel Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>TC Kimlik No</th>
            <th>İşe Giriş Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Personeller != null && Model.Personeller.Any())
        {
            @foreach (var personel in Model.Personeller)
            {
                <tr>
                    <td>@personel.Ad</td>
                    <td>@personel.Soyad</td>
                    <td>@personel.TCKimlikNo</td>
                    <td>
                        @if (personel.Personel_Detay_SGK != null)
                        {
                            @personel.Personel_Detay_SGK.IseGirisTarihi.ToString("dd.MM.yyyy")
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@personel.PersonelID" class="btn btn-sm btn-info">Detay</a>
                        <a asp-page="./Edit" asp-route-id="@personel.PersonelID" class="btn btn-sm btn-warning">Güncelle</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    Henüz personel kaydı bulunmamaktadır.
                </td>
            </tr>
        }
    </tbody>
</table>
